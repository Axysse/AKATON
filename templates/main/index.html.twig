{% extends 'base.html.twig' %}

{% block title %}Index BBstock!{% endblock %}

{% block body %}
<section class="m-10 flex flex-wrap justify-center gap-14">
{% for product in products %}
{% if product.enable == 1 %}
			<div class="w-96 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-100">
            <a href="{{path('app_produit', {id: product.id})}}">
					<img class="rounded-t-lg w-96 h-72 hover:scale-125" src="{{asset(product.image)}}" alt=""/>
				</a>
				<div class="p-5">
					<h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{product.name}}</h5>
					<p class="mb-3 font-normal text-gray-700 dark:text-gray-400 truncate">{{product.description}}</p>
                    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400 truncate">{{product.price}}€</p>
					<a href="{{path('app_produit', {id: product.id})}}" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-[#dcd873] rounded-lg hover:bg-[#0b9c9f] focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
						Read more
						<svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 14 10">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
						</svg>
					</a>
				</div>
			</div>
			{% endif %}
		{% endfor %}
        </section>

