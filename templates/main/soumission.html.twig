{% extends 'base.html.twig' %}

{% block body %}

<section class="flex flex-col justify-center items-center gap-5 m-10">

{{ form_start(form) }}
<div class="mb-2 flex flex-row"> 
<p>Nom du produit : </p> <div class="border border-black">{{ form_widget(form.name) }}</div>
</div>
<div class="mb-2 flex flex-row"> 
